	ebegin 'Starting qubesdb-daemon'

	# start-stop-daemon hangs =(
	#
	# start-stop-daemon --env --start --exec /usr/sbin/qubesdb-daemon -- 0

	/usr/sbin/qubesdb-daemon 0
}
