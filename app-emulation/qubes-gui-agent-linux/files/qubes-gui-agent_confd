rc_ulimit="-c 0 -d 65536 -f 16384 -i 1 -l 131072 -l 131072 -m 131072 -n 128 -q 0 -s 1024 -u 6 -v 16777216 -x 0"

# 0	core file	(-c)
# 512M (65536)	data	(-d)
# 16M	file create	(-f)
# 1	pending signals	(-i)
# 128M (131072) locked memory	(-l)
# 128M (131072)	memory	(-m)
# 128	open files	(-n)
# 0	message queues	(-q)
# 1M (1024) stack	(-s)
# 6  threads		(-u)
# 16G (16777216) vmem	(-v)
# 0 file locks		(-x)
